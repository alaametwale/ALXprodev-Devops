#!/bin/bash

FILE="data.json"

# استخدام jq + awk + sed لاستخراج البيانات
name=$(jq -r '.name' $FILE | awk '{print toupper(substr($0,1,1)) substr($0,2)}')
formatted_height=$(jq -r '.height' $FILE | awk '{print $1}')
formatted_weight=$(jq -r '.weight' $FILE | awk '{print $1}')
type=$(jq -r '.types[0].type.name' $FILE | sed 's/.*/\u&/')

# الصياغة المطلوبة بالضبط
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
